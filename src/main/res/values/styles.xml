    <!--普通ListView的样式-->
    <style name="listview_style">
        <item name="android:listSelector">@color/cache_corlor_hint</item>
        <item name="android:cacheColorHint">@color/cache_corlor_hint</item>
        <item name="android:divider">@color/wheel_normal</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:scrollbars">none</item>
    </style>

</resources>
