<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edf2ff"
    android:orientation="vertical">

    <include layout="@layout/include_top_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <EditText
            android:id="@+id/ad_edittext"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#ffffff"
            android:gravity="top|left"
            android:textSize="14dp"
            android:textColorHint="#aaaaaa"
            android:hint="请输入反馈内容"
            android:padding="14dp" />

        <TextView
            android:id="@+id/kefu"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ad_edittext"
            android:layout_below="@id/ad_edittext"
            android:layout_marginTop="10dp"
            android:textColor="#5e89ef"
            android:layout_marginLeft="14dp"
            android:textSize="14dp"
            android:text="客服电话:" />

        <TextView
            android:id="@+id/cs_phone"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_edittext"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/kefu"
            android:text="12556185"
            android:textSize="14dp"
            android:textColor="#5e89ef" />

        <TextView
            android:id="@+id/text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ad_edittext"
            android:layout_below="@id/ad_edittext"
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:textColor="#555555"
            android:textSize="14dp"
            android:text="还可输入200字" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/bigbutton"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>